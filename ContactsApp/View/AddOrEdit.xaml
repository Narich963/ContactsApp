<Window x:Class="ContactsApp.View.AddOrEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsApp.View"
        mc:Ignorable="d"
        Title="AddOrEdit" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="0 10 0 0" />
            <Setter Property="Width" Value="150" /> 
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10 10 10 10"/>
            <Setter Property="Height" Value="20" />
            <Setter Property="Width" Value="50" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0 0 0 50">
            <TextBlock x:Name="Title" FontWeight="Bold"/>
            
            <StackPanel>
                <Label Target="{Binding FirstNameBox}">First name</Label>
                <TextBox Text="{Binding Contact.FirstName}" Name="FirstNameBox"></TextBox>
            </StackPanel>

            <StackPanel>
                <Label Target="{Binding LastNameBox}">Last name</Label>
                <TextBox Text="{Binding Contact.LastName}" Name="LastNameBox"></TextBox>
            </StackPanel>

            <StackPanel>
                <Label Target="{Binding PhoneNumberBox}">Phone number</Label>
                <TextBox Text="{Binding Contact.PhoneNumber}"  Name="PhoneNumberBox"></TextBox>
            </StackPanel>

            <StackPanel>
                <Label Target="{Binding AddressBox}">Address</Label>
                <TextBox Text="{Binding Contact.Address}" Name="AddressBox"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="SaveButton" Click="CreateButton_Click"></Button>
                <Button Click="CancelButton_Click" Background="Red">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
